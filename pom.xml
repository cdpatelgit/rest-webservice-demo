<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>rest-webservice-demo</groupId>
	<artifactId>rest-webservice-demo</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<parent>
		<artifactId>common-parent-pom</artifactId>
		<groupId>com.att.canopi.ms</groupId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<properties>
		<swagger.directory>${basedir}/target/classes/META-INF/resources/swagger</swagger.directory>
		<icd.file>service.json</icd.file>
		<icd.package>com.att.inventory.ms.validation.nte.service.rs</icd.package>
		<java.version>1.8</java.version>
		<docker.registry>zlp11313.vci.att.com:5100</docker.registry>
		<build.number>local</build.number>
		<kube.namespace>com-att-inventory-ms</kube.namespace>
		<service.account>ajsc-svc-account</service.account>
		<namespace>com.att.inventory.ms</namespace>
		<sdk.java.camel.rest>6.2.0.7</sdk.java.camel.rest>
		<springframework.version>4.3.4.RELEASE</springframework.version>
		<project.scm.id>git-server</project.scm.id>
		<camel.version>2.18.0</camel.version>
		<velocity.version>1.7</velocity.version>
		<velocity.tools.version>2.0</velocity.tools.version>
		<canopi.ms.common.version>0.0.1-SNAPSHOT</canopi.ms.common.version>
	</properties>


	<dependencies>
		<dependency>
			<groupId>com.att.ajsc</groupId>
			<artifactId>sdk-java-camel-rest</artifactId>
		</dependency>

		<dependency>
			<groupId>net.sf.json-lib</groupId>
			<artifactId>json-lib</artifactId>
			<version>2.4</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>

		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
			<resource>
				<directory>etc</directory>
				<targetPath>target/etc</targetPath>
				<filtering>true</filtering>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/generated</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
		</resources>
	</build>
</project>